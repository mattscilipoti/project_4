<div class = "new-post">
	
	<h2><%= @post.name %></h2>
	<div>
		<p>
			<%= @post.uid %>, <%= @post.created_at.strftime("%m/%d/%y") %>
		</p>
	 	<p class="post-description">
	    	<%= @post.description %>
	 	</p>
	 	<div>
		    <% if current_user == @post.user %>
		        <%= link_to "Edit", edit_post_path(@post) %>
		        <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
		      <% end %>

		</div>
	</div>
</div>